{
  "name": "@bvalosek/bval-nft",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "postinstall": "npm run bootstrap",
    "bootstrap": "lerna bootstrap",
    "test": "jest --verbose --runInBand --config jest-unit.config.json",
    "clean": "lerna run clean",
    "nuke": "npm run clean && lerna clean -y && rm -rf ./node_modules",
    "token-gallery:dev": "npx lerna run --stream dev --scope @bvalosek/site-token-gallery"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "files": [
      "./packages/*/src/**/*.ts"
    ],
    "printWidth": 120,
    "parser": "typescript"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "plugin:prettier/recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
      "**/.serverless/*",
      "**/node_modules/*",
      "**/generated-*",
      "**/*snapshot.spec.ts"
    ],
    "rules": {}
  },
  "devDependencies": {
    "@types/jest": "26.0.18",
    "@types/react": "17.0.3",
    "@types/react-dom": "17.0.2",
    "@typescript-eslint/eslint-plugin": "4.14.2",
    "@typescript-eslint/parser": "4.14.2",
    "eslint": "7.19.0",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-prettier": "3.3.1",
    "html-webpack-plugin": "5.3.1",
    "jest": "26.6.3",
    "lerna": "3.22.1",
    "prettier": "2.2.1",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-hot-loader": "4.13.0",
    "ts-jest": "26.5.0",
    "ts-loader": "8.0.18",
    "ts-node": "9.1.1",
    "typescript": "4.1.3",
    "webpack": "5.27.1",
    "webpack-cli": "4.5.0",
    "webpack-dev-server": "3.11.2"
  }
}
